<div class="well well-front coming-item">
  <div class="item-image">
    <a href="/listings/<%=item.id%>">
      <%= image_tag(item.photo.url(:square), :class => "img-responsive", :alt => "Responsive image") %> 
    </a>
  </div>
  <h2 class="coming-title"><%= item.title %></h2>
  <ul class="unstyled coming-recent-list">
    <li class="coming-recent-price coming-recent">Starting Bid: <strong><%= number_to_currency((item.current_price) /100.0, unit: '£') %></strong></li>
    <li class="coming-bid coming-recent">RRP: <strong><%= number_to_currency((item.rrp) /100.0, unit: '£') %></strong></li>
  </ul>
</div>
<%= render 'bid_js', listing: item  %>
