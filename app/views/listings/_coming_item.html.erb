<div class="panel">
  <!-- Default panel contents -->
  <div class="panel-heading item-title"><h2 class="text-center item-heading"><%= item.title %></h2></div>
  <div class="item-image">
  	<a href="/listings/<%=item.id%>">
  		<%= image_tag(item.photo.url(:thumb), :class => "img-responsive", :alt => "Responsive image") %> 
  	</a>
  </div>

 <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item item-bid" id="listing-price-<%= item.id %>">Winning Bid: <strong class="pull-right">--</strong></li>
    <li class="list-group-item item-winning" id="listing-user-<%= item.id %>">Winner: <strong class="pull-right">--</strong></li>
  </ul>
</div>


<%= render 'bid_js', listing: item  %>



