<% @listing.errors.full_messages.each do |error| %>
  <p class="text-warning"><%= error %></p>
<% end %>
<%= form_for(@listing) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :starting_price, "Starting price(p)" %>
  <%= f.number_field :starting_price %>

  <%= f.label :rrp, "RRP(p)" %>
  <%= f.number_field :rrp %>

  <%= f.label :time_per_bid, "Time per bid (s)" %>
  <%= f.number_field :time_per_bid %>

  <%= f.label :credits_per_bid, "Credit per bid (p)" %>
  <%= f.number_field :credits_per_bid %>

  <%= f.label :photo %>
  <%= f.file_field :photo %>

  <%= f.label :duration_human %>
  <%= f.datetime_select :duration_human %>

  <%= f.label :active %>
  <% if Listing.where(active: true).size >=6 %>
    <%= f.check_box :active, disabled: true %>
  <% else %>
    <%= f.check_box :active %>
  <% end %>

  <%= f.label :status %>
  <%= f.select :status, [["Active", "a"], ["Coming Soon", "c"], ["Recent", "r"]] %>

  <%= f.submit "Submit" %>

<% end %>
